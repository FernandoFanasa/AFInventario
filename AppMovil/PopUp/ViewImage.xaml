<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil.PopUp.ViewImage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Shell.PresentationMode="Modal"
             xmlns:viewmodels="clr-namespace:AppMovil.ViewModels"
             x:DataType="viewmodels:ViewImageViewModel"
             Title="ViewImage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, auto" Padding="10, 10, 10, 10">
        <Image
            Aspect="AspectFit"
            Source="{Binding DtImage, Mode=OneWay, Converter={StaticResource ByteArrayToImageSourceConverter}}" />
        <Button Grid.Row="1" Command="{Binding Close}" Text="Cerrar"/>
    </Grid>
</ContentPage>